<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsFragment">

    <!-- TODO: Update blank fragment layout -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="250dp"
            android:text="Account"
            android:textColor="@color/heading"
            android:textSize="30sp"
            app:layout_constraintBottom_toTopOf="@+id/logout"
            app:layout_constraintStart_toEndOf="@+id/account_image"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/account_image"
            android:layout_width="103dp"
            android:layout_height="90dp"
            android:layout_marginStart="44dp"
            android:layout_marginTop="233dp"
            android:src="@drawable/account"
            app:layout_constraintEnd_toStartOf="@+id/account"
            app:layout_constraintHorizontal_bias="0.032"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="72dp"
            android:layout_marginTop="76dp"
            android:text="Logout"
            android:textColor="@color/heading"
            android:textSize="30sp"
            app:layout_constraintBottom_toTopOf="@+id/help"
            app:layout_constraintStart_toEndOf="@+id/logout_image"
            app:layout_constraintTop_toBottomOf="@+id/account" />

        <ImageView
            android:id="@+id/logout_image"
            android:layout_width="83dp"
            android:layout_height="62dp"
            android:layout_marginStart="52dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/logout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/account_image" />

        <TextView
            android:id="@+id/help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="68dp"
            android:layout_marginTop="72dp"
            android:text="Help"
            android:textColor="@color/heading"
            android:textSize="30sp"
            app:layout_constraintStart_toEndOf="@+id/help_image"
            app:layout_constraintTop_toBottomOf="@+id/logout" />

        <ImageView
            android:id="@+id/help_image"
            android:layout_width="94dp"
            android:layout_height="77dp"
            android:layout_marginStart="44dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/help"
            app:layout_constraintEnd_toStartOf="@+id/help"
            app:layout_constraintHorizontal_bias="0.03"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/logout_image" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>

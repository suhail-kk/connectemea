<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".Fragments.SettingsFragment">

    <!-- TODO: Update blank fragment layout -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:layout_gravity="center">


        <LinearLayout
            android:id="@+id/linearLayout54"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <ImageView
                android:id="@+id/account_image"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:src="@drawable/account" />

            <TextView
                android:id="@+id/account"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_weight="1"
                android:text="Account"
                android:layout_gravity="center"
                android:textColor="@color/heading"
                android:textSize="30sp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout59"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="@+id/linearLayout54"
            app:layout_constraintStart_toStartOf="@+id/linearLayout54"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout54">

            <ImageView
                android:id="@+id/logout_image"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="62dp"
                android:src="@drawable/logout" />

            <TextView
                android:id="@+id/logout"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:layout_gravity="center"
                android:textColor="@color/heading"
                android:textSize="30sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="@+id/linearLayout59"
            app:layout_constraintStart_toStartOf="@+id/linearLayout59"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout59">


            <ImageView
                android:id="@+id/help_image"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="77dp"
                android:src="@drawable/help" />

            <TextView
                android:id="@+id/help"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Help"
                android:layout_gravity="center"
                android:textColor="@color/heading"
                android:textSize="30sp" />


        </LinearLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>

<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.emea">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Emea"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".Activity.SplashScreen"
            android:screenOrientation="portrait"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.AppInfo"
            android:screenOrientation="portrait"
            android:exported="true" />
        <activity
            android:name=".Activity.HomePage"
            android:screenOrientation="portrait"
            android:exported="true"
            android:label="" />
        <activity
            android:name=".Activity.EducationDetailsView"
            android:screenOrientation="portrait"
            android:label="Education Details" />
        <activity android:name=".Activity.RecoveryPassword"
            android:screenOrientation="portrait"/>
        <activity android:name=".Activity.EducationEdit"
            android:screenOrientation="portrait"/>

        <meta-data
            android:name="com.google.android.actions"
            android:resource="@drawable/rounded_shape" />

        <activity
            android:name=".Activity.EducationalDetails"
            android:screenOrientation="portrait"
            android:label="Education Details" />
        <activity
            android:name=".Activity.PersonalDetails"
            android:screenOrientation="portrait"
            android:label="Personal Details" />

        <activity
            android:name=".Activity.ExtraCurricularActivity"
            android:screenOrientation="portrait"
            android:label="ExtraCurricular Details" />
        <activity
            android:name=".Activity.ForgotPassword"
            android:screenOrientation="portrait"
            android:label="" />
        <activity
            android:name=".Activity.MainActivity"
            android:screenOrientation="portrait"
            android:label="">

        </activity>
        <activity
            android:name=".Activity.RegisterPage"
            android:screenOrientation="portrait"
            android:label="" />

        <activity
            android:name=".Activity.FamilyDetailsView"
            android:screenOrientation="portrait"
            android:label="Family Details" />
        <activity
            android:name=".Activity.PersonalDetailView"
            android:screenOrientation="portrait"
            android:label="Personal details" />


        <meta-data
            android:name="com.google.android.actions"
            android:resource="@drawable/rounded_shape" />

        <activity
            android:name=".Activity.FamilyDetails"
            android:screenOrientation="portrait"
            android:label="Family Details" />
        <activity
            android:name=".Activity.FamilyEdit"
            android:screenOrientation="portrait"
            android:label="Family Details" />


        <activity
            android:name=".Activity.PersonalEdit"
            android:screenOrientation="portrait"
            android:label="Peronal Details" />

    </application>




</manifest>